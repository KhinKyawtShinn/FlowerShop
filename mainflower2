import java.io.*;
import java.util.ArrayList;
import java.util.Scanner;
import java.lang.NumberFormatException;

public class mainflower {

    private ArrayList<IFlower> flowers;

    public mainflower() {
        flowers = new ArrayList<>();
        IFlower flower1 = new Lavender();
        IFlower flower2 = new Tulip();
        IFlower flower3 = new Camellia();
        flowers.add(flower1);
        flowers.add(flower2);
        flowers.add(flower3);
    }

    public void start() {
        File flowerFile = new File("/workspaces/FlowerShop/ListOfFlowers.txt");

        try (BufferedReader bR = new BufferedReader(new FileReader(flowerFile))) {
            String line;
            while ((line = bR.readLine()) != null) {
                System.out.println(line);
            }
            Scanner keyboard = new Scanner(System.in);
            System.out.print("Please enter your choice : ");
            int choice = keyboard.nextInt();

            switch (choice) {
                case 1:
                    displayFlowerDetails(0);
                    break;
                case 2:
                    displayFlowerDetails(1);
                    break;
                case 3:
                    displayFlowerDetails(2);
                    break;
                case 4:
                    System.out.println("Bye Bye! ");
                    return;
                default:
                    System.out.println("Please select the available options");
                    break;
            }
        } catch (FileNotFoundException e) {
            throw new RuntimeException(e);
        } catch (IOException e) {
            throw new RuntimeException(e);
        }
    }


    private void displayFlowerDetails(int index) {
        IFlower flower = flowers.get(index);
        System.out.println("You chose " + flower.Name() + ".");
        System.out.println("Color : " + flower.Color());
        System.out.println("Fragrance : " + flower.Fragrance());
        System.out.println("Language of flower : " + flower.Language());
        System.out.println("Indoor? : " + flower.IsIndoor());
        System.out.println("Price : " + flower.Price());

        double total = calculatePrice(flower);

        System.out.print("Do you want to add more [y/n]: ");
        Scanner keyboard = new Scanner(System.in);
        String choice = keyboard.next();
        while (choice.equals("y")) {
            total += calculatePrice(flower);
            System.out.print("Do you want to add more [y/n]: ");
            choice = keyboard.next();
        }
        System.out.println("The total is " + total + "$");
    }

    private double calculatePrice(IFlower flower) {
        try {
            Scanner keyboard = new Scanner(System.in);
            System.out.print("How many : ");
            double amount = keyboard.nextInt();
            return amount * flower.Price();
        } catch (NumberFormatException e) {
            System.out.println(e.getMessage());
            return 0.0;
        }
    }

    public static void main(String[] args) {
        mainflower mainFlower = new mainflower();
        mainFlower.start();
    }
}
